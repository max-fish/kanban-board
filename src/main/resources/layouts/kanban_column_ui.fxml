<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<fx:root id="Column_root" fx:id="rootPane" minWidth="200" prefHeight="NaN" prefWidth="200"
         stylesheets="@../styling/column_styling.css" type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="controllers.ColumnController">
    <top>
        <VBox id="Column_header" prefHeight="50" prefWidth="Infinity" spacing="5" alignment="CENTER">
            <AnchorPane>
                <JFXButton id="DeleteColumn" buttonType="FLAT" maxHeight="40" maxWidth="40"
                           onMouseClicked="#deleteColumn" prefHeight="30" prefWidth="30" AnchorPane.leftAnchor="0.0">
                    <graphic>
                        <FontIcon iconColor="white" iconLiteral="gmi-delete" iconSize="30"/>
                    </graphic>
                </JFXButton>
                <JFXButton buttonType="FLAT" maxHeight="40" maxWidth="40" onMousePressed="#makeNewCard" prefHeight="30"
                           prefWidth="30" AnchorPane.rightAnchor="0.0">
                    <graphic>
                        <FontIcon iconColor="white" iconLiteral="gmi-add" iconSize="30"/>
                    </graphic>
                </JFXButton>
            </AnchorPane>
            <JFXTextField styleClass="column-header" fx:id ="columnName" id="ColumnName" maxWidth="180" prefHeight="50" promptText="Add column name"/>
            <JFXTextField styleClass="column-header" fx:id ="columnRole" id="ColumnRole" maxWidth="180" prefHeight="50" promptText="Add column role"/>
        </VBox>
    </top>
    <center>
        <VBox fx:id="cards" id="card_list" prefHeight="NaN" prefWidth="100" alignment="CENTER"/>
    </center>
</fx:root>
