<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.ScrollPane?>
<BorderPane fx:id="rootPane" id="root" prefHeight="600" prefWidth="1000" stylesheets="@../styling/board_styling.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.KanbanBoardController" onMouseClicked="#requestFocus">
    <top>
        <JFXTextField fx:id="boardTitle" id="BoardName" promptText="Board Name" prefWidth="200" prefHeight="50"
                      maxWidth="400" maxHeight="50"/>
    </top>
    <center>
        <ScrollPane fx:id="columnsScrollPane" id="columnsScrollPane" stylesheets="@../styling/scrollpane_styling.css" prefHeight="400" prefWidth="1000" visible="false">
        <HBox fx:id="columns" id="Columns" prefHeight="600" prefWidth="1000">
            <BorderPane.margin>
                <Insets>
                    <right>20</right>
                    <left>15</left>
                    <bottom>15</bottom>
                </Insets>
            </BorderPane.margin>
        </HBox>
    </ScrollPane>
    </center>
    <right>
        <JFXButton id="AddColumnButton" onMouseClicked="#makeNewColumn" maxHeight="40" maxWidth="40" prefHeight="30"
                   prefWidth="30" buttonType="RAISED">
            <graphic>
                <FontIcon iconLiteral="gmi-add" iconColor="#7e57c2" iconSize="30"/>
            </graphic>
            <BorderPane.margin>
                <Insets>
                    <left>20</left>
                    <top>10</top>
                </Insets>
            </BorderPane.margin>
        </JFXButton>
    </right>
</BorderPane>
